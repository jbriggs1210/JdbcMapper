package PF_ForwardSyntax;

import org.apache.beehive.netui.pageflow.PageFlowController;
import org.apache.beehive.netui.pageflow.Forward;
import org.apache.beehive.netui.pageflow.annotations.Jpf;

/**
 *******************************************************************************
 *
 * -----------------------------------------------------------------------------
 * @desc: This PageFlowController file contains an illegal attribute, "myattribute" on
 * the jpf:forward annotation of Forward method "page1".
 *
 * @result:
 * The compiler should catch this and issue an error that "myattribute" is
 * invalid.
 *
 ******************************************************************************/
@Jpf.Controller()
public class Controller extends PageFlowController
    {
    @Jpf.Action(
        forwards = {
            @Jpf.Forward(
                name = "pg1",
                path = "Pg1.jsp")
        })
    protected Forward begin()
        {
        return new Forward("pg1");
        }

    @Jpf.Action(
        forwards = {
            @Jpf.Forward(
                name = "pg1",
                path = "Pg1.jsp"
                myattribute = "testing")
        })
    protected Forward page1()
        {
        return new Forward("pg1");
        }
    }
