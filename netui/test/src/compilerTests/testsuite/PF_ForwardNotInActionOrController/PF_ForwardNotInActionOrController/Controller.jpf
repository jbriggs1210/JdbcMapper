package PF_ForwardNotInActionOrController;

import org.apache.beehive.netui.pageflow.*;
import org.apache.beehive.netui.pageflow.annotations.Jpf;

/**
 *******************************************************************************
 *
 *  @desc: This PageFlowController file omits the jpf:action annotation on the Forward
 * "page1" method but does declare a jpf:forward annotation.
 *
 * @result: The compiler should catch this omission and issue an error or at least a
 * warning.
 *
 ******************************************************************************/
@Jpf.Controller()
public class Controller extends PageFlowController
    {
    @Jpf.Action(
                forwards = {
            @Jpf.Forward(name = "pg1", path = "Pg1.jsp")
        }
    )
    protected Forward begin()
        {
        return new Forward("pg1");
        }

    @Jpf.Forward(name = "pg2", path = "Pg2.jsp")
    protected Forward page1()
        {
        return new Forward("pg2");
        }
    }
