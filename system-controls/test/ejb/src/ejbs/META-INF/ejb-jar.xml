<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>
<ejb-jar>
    
    <display-name>cactus-sample-ejb</display-name>

    <enterprise-beans>
        <session>
            <description>Simple Session Bean</description>
            <display-name>SimpleSession</display-name>
            <ejb-name>SimpleSessionBean</ejb-name>
            <home>org.apache.beehive.test.controls.system.ejb.session.SimpleSessionHome</home>
            <remote>org.apache.beehive.test.controls.system.ejb.session.SimpleSessionRemote</remote>
            <local-home>org.apache.beehive.test.controls.system.ejb.session.SimpleSessionLocalHome</local-home>
            <local>org.apache.beehive.test.controls.system.ejb.session.SimpleSessionLocal</local>
            <ejb-class>org.apache.beehive.test.controls.system.ejb.session.SimpleSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
           <ejb-name>SimpleEntityBean</ejb-name>
            <home>org.apache.beehive.test.controls.system.ejb.entity.SimpleEntityHome</home>
            <remote>org.apache.beehive.test.controls.system.ejb.entity.SimpleEntityRemote</remote>
            <local-home>org.apache.beehive.test.controls.system.ejb.entity.SimpleEntityLocalHome</local-home>
            <local>org.apache.beehive.test.controls.system.ejb.entity.SimpleEntityLocal</local>
            <ejb-class>org.apache.beehive.test.controls.system.ejb.entity.SimpleEntityBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
    </enterprise-beans>

    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>SimpleSessionBean</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>*</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>SimpleEntityBean</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>*</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
