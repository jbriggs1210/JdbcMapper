package org.apache.beehive.test.controls.system.controls;

import org.apache.beehive.controls.api.bean.ControlExtension;
import org.apache.beehive.controls.system.jms.JMSControl;

import java.util.Map;


@ControlExtension
@JMSControl.Destination(sendJndiName = "java:/comp/env/testTopic",
                        sendType = JMSControl.DestinationType.Topic,
                        jndiContextFactory="org.openejb.client.RemoteInitialContextFactory",
                        jndiUsername = "system",
                        jndiPassword = "manager",
                        jndiProviderURL = "localhost:4201",
                        transacted = false,
                        jndiConnectionFactory = "java:/comp/env/DefaultActiveMQConnectionFactory")
public interface OrderTopicControl extends JMSControl
{
    /**
     * Represents a simple order.
     */
    public class Order implements java.io.Serializable
    {
        /**
         * Comment for <code>serialVersionUID</code>
         */
        private static final long serialVersionUID = 8951994251593378324L;

        public Order() {

        }

        public Order(int buyer, String[] list) {
            buyerId = buyer;
            itemList = list;

        }

        private int buyerId;
        private String[] itemList;

        public int getBuyerId() { return buyerId; }
        public String[] getItemList() { return itemList; }
    }

    public javax.jms.Message submitOrder(Order order, @Property(name = "DeliverBy") long deliverBy);

    @Priority(3)
    public javax.jms.Message submitOrderWithPriority(Order order);

    @CorrelationId("666")
    public javax.jms.Message submitOrderWithCorrelationId(Order order);

    @Type("ORDER_TEST")
    public javax.jms.Message submitOrderWithType(Order order);

    @Delivery(DeliveryMode.NonPersistent)
    public javax.jms.Message submitOrderWithDeliveryMode(Order order);

    //
    // message types
    //
    @JMSControl.Message(JMSControl.MessageType.Text)
    public javax.jms.Message sendTextMessage(String messageText);

    @JMSControl.Message(JMSControl.MessageType.Map)
    public javax.jms.Message sendMapMessage(Map messageMap);

    @JMSControl.Message(JMSControl.MessageType.Bytes)
    public javax.jms.Message sendBytesMessage(byte[] messageBytes);

    @JMSControl.Message(JMSControl.MessageType.JMSMessage)
    public javax.jms.Message sendMessageMessage(javax.jms.Message messageMessage);
}
