<project name="Beehive/SystemControls/WebService/Utils" default="build" basedir=".">

    <import file="../../../systemcontrols-imports.xml"/>

    <property name="module.name" value="webservice-control"/>
    <property name="module.dir" location="${src.dir}/webservice/webservice-utils"/>

    <path id="module.classpath">
        <path refid="commons-discovery.dependency.path"/>
        <path refid="commons-logging.dependency.path"/>
        <path refid="axis.dependency.path"/>
        <path refid="jaxrpc.dependency.path"/>
        <path refid="saaj.dependency.path"/>
        <path refid="xbean.dependency.path"/>
    </path>

    <target name="build" description="Build the web service control and optional modules.">
        <javac destdir="${classes.dir}/${module.name}" classpathref="module.classpath" debug="on">
            <src path="axis"/>
            <src path="core"/>
            <src path="xmlbeans"/>
        </javac>
    </target>

</project>